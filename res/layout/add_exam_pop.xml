<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/homework_bg"
    android:paddingBottom="5dp" >

    <RelativeLayout
        android:id="@+id/add_exam_title_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/add_exam_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/homework_cancel_btn"
            android:text="取消"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/add_exam_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加考试"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/textSize" />

        <Button
            android:id="@+id/add_exam_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/add_exam_cancel_btn"
            android:padding="8dp"
            android:background="@drawable/homework_ok_btn"
            android:text="确认"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/textSize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_exam_title_rl"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        android:background="@drawable/add_hw_content_bg" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/add_exam_subject_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="科    目： "
                android:textColor="#616161"
                android:textSize="@dimen/textSize" >
            </TextView>
         
          <TextView
                android:id="@+id/add_exam_select_subject_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选择科目"
                android:textColor="#616161"
                android:textSize="@dimen/textSize"
                android:layout_toRightOf="@id/add_exam_subject_tv"
                android:layout_alignTop="@id/add_exam_subject_tv"
                android:layout_marginLeft="10dp" >
            </TextView>
            
        <TextView
                android:id="@+id/aad_exam_line_one"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/add_exam_subject_tv"
                android:background="@drawable/line" />
        
        <TextView
                android:id="@+id/exam_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/aad_exam_line_one"
                android:layout_marginTop="10dp"
                android:text="考试日期："
                android:textSize="@dimen/textSize" />
            
           <TextView
                android:id="@+id/add_exam_date_picker_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@id/exam_date_tv"
                android:layout_alignTop="@id/exam_date_tv"
                android:text="选择日期"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/textSize"
                />
           
           <TextView
                android:id="@+id/add_exam_line_two"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/add_exam_date_picker_btn"
                android:layout_marginTop="5dp"
                android:background="@drawable/line" />
           
           <TextView
                android:id="@+id/exam_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_exam_line_two"
                android:layout_marginTop="10dp"
                android:text="考试时间："
                android:textSize="@dimen/textSize" />
            
           <TextView
                android:id="@+id/exam_time_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@id/exam_time_tv"
                android:layout_alignTop="@id/exam_time_tv"
                android:text="选择时间"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/textSize"
                />
           
          <TextView
                android:id="@+id/add_exam_line_three"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/exam_time_tv"
                android:layout_marginTop="5dp"
                android:background="@drawable/line" />
            
            <TextView
                android:id="@+id/add_exam_bak_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_exam_line_three"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:text="备注："
                android:textSize="@dimen/textSize" />

           <EditText
                android:id="@+id/add_exam_bak_et"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignLeft="@id/add_exam_bak_tv"
                android:layout_below="@id/add_exam_bak_tv"
                android:hint="bak"
                android:maxLines="2"
                android:textSize="@dimen/textSize" />
                
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>