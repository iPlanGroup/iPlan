<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/title_bar" >

        <Button
            android:id="@+id/setbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/selector_press"
            android:text="设置"
            android:layout_marginLeft="10dip"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/back2today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/setbtn"
            android:background="@drawable/selector_press"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:text="回到今天"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TableRow
            android:id="@+id/tableRow1"
            android:background="@drawable/unpress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >

            <Button
                android:id="@+id/dayplanbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_press_else"
                android:text="日计划"
                android:layout_weight="1"
                android:paddingRight="10dip"
                android:paddingLeft="20dp"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/weekplanbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="20dip"
                android:background="@drawable/selector_press_else"
                android:text="周计划"
                android:paddingLeft="10dip"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </TableRow>

         <TableRow
             android:id="@+id/tableRow2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
              >

             <Button
                 android:id="@+id/button1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="10dp"
                 android:background="@drawable/selector_press"
                 android:text="学期"
                 android:textColor="#fff"
                 android:textSize="20sp" />

             <Button
                 android:id="@+id/summarybtn"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@drawable/selector_press"
                 android:text="汇总"
                 android:layout_marginRight="10dp"
                 android:textColor="#ffffff"
                 android:textSize="20sp" />
         </TableRow>
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
         >
    </RelativeLayout>

</LinearLayout>