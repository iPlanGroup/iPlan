<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/homework_bg"
    android:paddingBottom="5dp" >

    <RelativeLayout
        android:id="@+id/add_holiday_title_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/add_holiday_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/homework_cancel_btn"
            android:text="取消"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/add_holiday_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加假期"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/textSize" />

        <Button
            android:id="@+id/add_holiday_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/add_holiday_cancel_btn"
            android:padding="8dp"
            android:background="@drawable/homework_ok_btn"
            android:text="确认"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/textSize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_below="@id/add_holiday_title_rl"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/add_hw_content_bg" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/add_holiday_subject_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="假    期： "
                android:textColor="#616161"
                android:textSize="@dimen/textSize" >
            </TextView>
         
          <EditText
                android:id="@+id/add_holiday_select_subject_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="填写假期"
                android:textColor="#616161"
                android:textSize="@dimen/textSize"
                android:layout_toRightOf="@id/add_holiday_subject_tv"
                android:layout_alignBottom="@id/add_holiday_subject_tv"
                android:layout_marginLeft="10dp" >
            </EditText>
            
        <TextView
                android:id="@+id/aad_holiday_line_one"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/add_holiday_subject_tv"
                android:background="@drawable/line" />
        
        <TextView
                android:id="@+id/holiday_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/aad_holiday_line_one"
                android:layout_marginTop="10dp"
                android:text="开始日期："
                android:textSize="@dimen/textSize" />
            
           <TextView
                android:id="@+id/add_holiday_date_picker_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@id/holiday_date_tv"
                android:layout_alignTop="@id/holiday_date_tv"
                android:text="选择日期"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/textSize"
                />
           
           <TextView
                android:id="@+id/add_holiday_line_two"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/add_holiday_date_picker_btn"
                android:layout_marginTop="5dp"
                android:background="@drawable/line" />
           
           <TextView
                android:id="@+id/holiday_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_holiday_line_two"
                android:layout_marginTop="10dp"
                android:text="结束日期："
                android:textSize="@dimen/textSize" />
            
           <TextView
                android:id="@+id/holiday_time_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@id/holiday_time_tv"
                android:layout_alignTop="@id/holiday_time_tv"
                android:text="结束日期"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/textSize"
                />
           
          <TextView
                android:id="@+id/add_holiday_line_three"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/holiday_time_tv"
                android:layout_marginTop="5dp"
                android:background="@drawable/line" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>